//将一身高用英尺（feet）和英寸（inch）表示
#include<iostream>
using namespace std;

const int inch_per_feet = 12;//1feet = 12 inches

int main()
{
	cout<<"Please enter your height in inches:___\b\b\b";//\b表示退格符号
	int ht_inch;
	cin>>ht_inch;
	int ht_feet = ht_inch / inch_per_feet;//取商得英尺 
	int rm_inch = ht_inch % inch_per_feet;//取余 
	cout<<"Your height is "<<ht_feet<<" feet,and "<<rm_inch<<" inches.\n";
	 
	return 0;
 } 
